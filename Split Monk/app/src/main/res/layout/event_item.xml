<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardCornerRadius="28dp"
    android:padding="12dp"
    android:layout_marginTop="16dp"
    android:backgroundTint="#A2FBC8"
    tools:context=".Activities.LogInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Rohan"
            android:textAllCaps="true"
            android:textColor="@color/purple_500"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/event_members"
            android:layout_below="@id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#AEACAC"
            android:textStyle="bold"
            android:fontFamily="@font/open_sans"
            android:text="10 members Contibuted"/>

        <TextView
            android:id="@+id/event_desc"
            android:layout_below="@id/event_members"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#787878"
            android:textStyle="bold"
            android:fontFamily="@font/open_sans"
            android:text="An Event to contribute money and get things done."/>

        <TextView
            android:id="@+id/event_amount"
            android:layout_alignTop="@id/event_name"
            android:layout_toEndOf="@id/event_members"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:fontFamily="@font/open_sans"
            android:text="Rs. 1000"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>