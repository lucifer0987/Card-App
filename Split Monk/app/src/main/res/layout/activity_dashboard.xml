<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/blue"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:background="@color/white"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/heading_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_margin="24dp"
        android:fontFamily="@font/sfprobold"
        android:text="SPLIT MONK"/>

    <ImageView
        android:id="@+id/btn_logout"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="36dp"
        android:layout_alignTop="@id/heading_name"
        android:layout_alignParentEnd="true"
        android:src="@drawable/logout_button_icon"/>

    <LinearLayout
        android:id="@+id/profile_Card_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_below="@id/heading_name"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:elevation="10dp"
        android:gravity="center"
        android:background="@drawable/box_shadow_round"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="92dp"
                    android:layout_height="72dp"
                    android:src="@color/blue"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wecome, John"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans_regular"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Dashboard"
                    android:fontFamily="@font/open_sans_regular"
                    android:textColor="#000000"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/profile_upi"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="gaurv1407@oksbi"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/upi_icon"
            android:paddingStart="24dp"
            android:drawablePadding="16dp"
            android:fontFamily="@font/open_sans"
            android:textSize="20sp"
            android:background="@drawable/et_login"
            android:textColor="#2B2929"/>

        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/box_shadow"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:fontFamily="@font/open_sans"
                    android:text="Monk Points"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/profile_monk_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:fontFamily="@font/sfprobold"
                        android:textSize="30sp"
                        android:text="0"/>

                    <ImageView
                        android:layout_marginStart="6dp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/monk_icon"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginStart="12dp"
                android:background="@drawable/box_shadow"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:fontFamily="@font/open_sans"
                    android:text="Completed"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/profile_completed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:fontFamily="@font/sfprobold"
                        android:textSize="30sp"
                        android:text="0"/>

                    <ImageView
                        android:layout_marginStart="6dp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/completed_icon"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginStart="12dp"
                android:background="@drawable/box_shadow"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:fontFamily="@font/open_sans"
                    android:text="Groups"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/profile_groups"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:fontFamily="@font/sfprobold"
                        android:textSize="30sp"
                        android:text="0"/>

                    <ImageView
                        android:layout_marginStart="6dp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/group_icon"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_a_group"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:textSize="18sp"
                android:fontFamily="@font/sfprobold"
                app:cornerRadius="24dp"
                android:text="Create"/>

            <Button
                android:id="@+id/join_a_group"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_marginStart="12dp"
                android:layout_height="60dp"
                android:textSize="18sp"
                android:backgroundTint="@color/light_blue"
                app:strokeColor="@color/blue"
                app:strokeWidth="2dp"
                android:textColor="@color/blue"
                android:fontFamily="@font/sfprobold"
                app:cornerRadius="24dp"
                android:text="join now"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/no_group_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_Card_2"
        android:layout_marginTop="36dp"
        android:layout_centerHorizontal="true"
        android:text="Seems, you dont't have any group yet"
        android:textColor="@color/blue"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/group_rec"
        android:layout_below="@id/profile_Card_2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"/>

</RelativeLayout>