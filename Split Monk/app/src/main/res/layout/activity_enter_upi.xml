<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    tools:context=".Activities.EnterUpiActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/upi_form_img"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:paddingBottom="28dp"
        android:background="@drawable/upi_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprobold"
            android:layout_marginTop="24dp"
            android:textSize="32dp"
            android:textColor="#323232"
            android:text="Please Enter Your UPI ID for Payments"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprobold"
            android:layout_marginTop="24dp"
            android:textSize="16dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Your UPI ID"/>

        <EditText
            android:id="@+id/et_upi_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="gaurv1407@oksbi"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:textSize="32dp"
            android:textColorHint="#CFCACA"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btn_submit_upi"
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            android:layout_gravity="bottom"
            android:layout_height="60dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:cornerRadius="32dp"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>