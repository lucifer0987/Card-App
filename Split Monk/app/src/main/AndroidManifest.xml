<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.splitmonk" >

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/applogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/applogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.SplitMonk" >
        <activity
            android:name=".Activities.JoinActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.LogInActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.EnterUpiActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.GroupInfoActivity"
            android:exported="true" />
        <activity android:name=".Activities.EventDetailsActivity" />
        <activity android:name=".Activities.EventCreationActivity" />
        <activity android:name=".Activities.GroupDashboardActivity" />
        <activity android:name=".Activities.CreateActivity" />
        <activity android:name=".Activities.ProfileActivity" />
        <activity android:name=".Activities.DashboardActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.SignupActivity" />
        <activity android:name=".Activities.OnboardingActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>