<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#005AE6"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/illustration"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/qwer"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@drawable/login_bottom_bg"
        android:orientation="vertical"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/illustration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/sfprobold"
            android:text="Never Forget a Password Anymore"
            android:gravity="center"
            android:textColor="#131313"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/sf_pro"
            android:text="Are you also tired of forgetting your passwords everytime?\nSay no more, We got you!"
            android:gravity="center"
            android:textColor="#2B2929"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_margin="24dp"
            android:layout_gravity="bottom"
            android:layout_height="65dp"
            android:text="Get Started"
            android:fontFamily="@font/sfprobold"
            android:elevation="6dp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#09429C"
            app:cornerRadius="32dp"
            android:textSize="20sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>