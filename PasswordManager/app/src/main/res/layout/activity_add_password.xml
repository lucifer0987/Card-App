<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    tools:context=".AddPasswordActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/add_password_image"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/linear"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/sfprobold"
        android:text="Enter Your Password Details"
        android:textColor="#00FFFFFF"
        android:textSize="56dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:paddingBottom="28dp"
        android:background="@drawable/add_password_bg"
        android:orientation="vertical">

        <View
            android:layout_marginTop="28dp"
            android:layout_width="60dp"
            android:layout_height="4dp"
            android:background="@color/blue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprobold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="Give Your Service Name"/>

        <EditText
            android:id="@+id/et_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:hint="Google"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:textSize="32sp"
            android:textColorHint="#CFCACA"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="60dp"
            android:layout_height="4dp"
            android:background="@color/blue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprobold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="Your Sweet Email"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:hint="split@splitmonk.com"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:textSize="32sp"
            android:textColorHint="#CFCACA"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="60dp"
            android:layout_height="4dp"
            android:background="@color/blue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprobold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="Your Strong Password"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:hint="Your Password"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:textSize="32sp"
            android:textColorHint="#CFCACA"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/btn_add_password"
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:layout_gravity="bottom"
            android:layout_height="60dp"
            android:text="Add Password"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:cornerRadius="32dp"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>